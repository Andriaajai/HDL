/**
 * Computes the sum of three bits.
 */

CHIP FullAdder {
    IN a, b, c;  // 1-bit inputs
    OUT sum,     // Right bit of a + b + c
        carry;   // Left bit of a + b + c

    PARTS:
	Xor(a=a,b=b,out=r1);
	Not(in=r1,out=r5);
	And(a=r6,b=c,out=r7);
	Not(in=c,out=r8);
	And(a=r1,b=r6,out=sum);
	And(a=a,b=c,out=r2);
	And(a=b,b=c,out=r3);
	And(a=b,b=c,out=r4);
	Or(a=r2,b=r3,out=r3);
	Or(a=r5,b=r4,out=car);
    // Put you code here:
}
